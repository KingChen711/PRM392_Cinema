<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Thông tin đơn hàng"
        android:textColor="#004D40"
        android:layout_marginTop="50dp"
        android:textSize="25sp" />

    <!-- Tên người dùng -->
    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="Người đặt vé: user1"
        android:textColor="#000000"
        android:textSize="20sp" />

    <!-- Tên phòng -->
    <TextView
        android:id="@+id/txtHallName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Phòng: Phòng B"
        android:textColor="#333333"
        android:textSize="18sp" />

    <!-- Tên phim -->
    <TextView
        android:id="@+id/txtMovieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Phim: Cuộc Phiêu Lưu Vĩ Đại"
        android:textColor="#333333"
        android:textSize="18sp" />

    <!-- Ngày chiếu -->
    <TextView
        android:id="@+id/txtShowDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Ngày chiếu: 21/11/2024 16:24"
        android:textColor="#555555"
        android:textSize="16sp" />

    <!-- Ngày đặt -->
    <TextView
        android:id="@+id/txtBookingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Ngày đặt: 02/11/2024 21:50"
        android:textColor="#555555"
        android:textSize="16sp" />

    <!-- Tên ghế -->
    <TextView
        android:id="@+id/txtSeatNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/seat_background"
        android:backgroundTint="#FF03DAC5"
        android:gravity="center"
        android:padding="8dp"
        android:text="Ghế: A01"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- Chi tiết thực phẩm -->
    <TextView
        android:id="@+id/txtFoodDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="Chi tiết thực phẩm:"
        android:textColor="#004D40"
        android:textSize="20sp" />

    <!-- Danh sách thực phẩm -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fabRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:padding="8dp" />

    <!-- Tình trạng thanh toán -->
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="Tình trạng: Chưa thanh toán"
        android:textSize="20sp" />

    <!-- Tổng cộng -->
    <TextView
        android:id="@+id/totalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="Tổng cộng: 100.000đ"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonThanhToan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00796B"
        android:elevation="4dp"
        android:fontFamily="sans-serif-medium"
        android:padding="16dp"
        android:text="Thanh toán ngay"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />


</LinearLayout>
